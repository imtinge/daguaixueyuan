<h2 class="text-center">修改任务</h2>

<div class="col-md-8 col-md-offset-2">
  <%= simple_form_for [:admin, @task] do |f| %>
    <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control"}, label: "标题" %>
      <%= f.input :content, input_html: { class: "form-control"}, label: "内容" %>
    </div>

    <%= f.submit "提交", disable_with: "正在提交...", class: "btn btn-primary"%>
  <% end %>
</div>
